
production:
  email_delivery:
<% if node[:redmine].attribute?("config") and node[:redmine][:config][:email][:delivery_method]==":smtp" -%>
    delivery_method: :smtp
    smtp_settings:
<% node[:redmine][:config][:email][:smtp_settings].each_pair do | k, v| -%>
        <%= "#{k}: #{v}" %>
<% end -%>
<% else -%>
    delivery_method: :sendmail
<% end -%>
